class Solution {
    public int reductionOperations(int[] nums) {
        int n = nums.length;
        int operations=0;
        int distinctSmaller=0;

        Arrays.sort(nums);
        for(int i=1; i<n; i++){
            if(nums[i] != nums[i-1]){
                distinctSmaller++;
            }
            operations += distinctSmaller;
        }
        return operations;
        
    }
}
