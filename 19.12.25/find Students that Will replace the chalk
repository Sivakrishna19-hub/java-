class Solution {
    public int chalkReplacer(int[] chalk, int k) {
        int n = chalk.length;
        long sum = 0;
        for (int i : chalk) {
            sum += i;
        }
        long m = (long) k % sum;
        k = (int) m;
        int idx = 0;
        while (k > 0) {
            if (chalk[idx % n] > k) {
                return idx;
            } else {
                k -= chalk[idx % n];
            }
            idx++;
        }
        return idx;
    }
}
