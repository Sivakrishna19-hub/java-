class Solution {
    public int equalSubstring(String s, String t, int maxCost) {
        int left = 0;
        int maxLen = 0;
        int cost = 0;
        for(int i = 0; i < s.length(); i++) {
            cost += Math.abs(s.charAt(i) - t.charAt(i));
            while(cost > maxCost) {
                cost -= Math.abs(s.charAt(left) - t.charAt(left));
                left++;
            }
            maxLen = Math.max(maxLen, i - left + 1);
        }
        return maxLen;
    }
}
