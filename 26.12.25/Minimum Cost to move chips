class Solution {
    public int minCostToMoveChips(int[] position) {
        int odd=0;
        int eve=0;
        for(int i =0;i<position.length;i++){
            if(position[i]%2==0){
                eve++;
            }
            else{
                odd++;
            }
        }
        if(eve==0 || odd==0){
            return 0;
        }
        return Math.min(odd,eve);
    }
}
