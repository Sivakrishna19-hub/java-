class Solution {
    public long minimumPerimeter(long neededApples) {
        long currApples = 0;
        long peri = 0;
        int node = 1;
        while(currApples<neededApples){
            currApples +=12L*node*node;
            peri = 8L*node;
            node++;
        }
        return peri;
    }
}
